.sideBar
  .sideBar__userName
    %ul.topItems
      %li.topItems__userName
        = current_user.name
      %li.topItems__icons
        = link_to new_group_path, class: "topItems__btn" do
          = icon('far', 'edit', class: "topItems__btn--edit")
          %span<>
        = link_to edit_user_path(current_user), class: "topItems__btn" do
          = icon('fas', 'cog', class: "topItems__btn--cog")
          %span<>
  .sideBar__groupList
    - current_user.groups.each do |group|
      .groupItem
        = link_to group_messages_path(group), class: "groupItem__link" do
          .groupItem__name
            = group.name
          .groupItem__latestMessage
            = group.show_last_message